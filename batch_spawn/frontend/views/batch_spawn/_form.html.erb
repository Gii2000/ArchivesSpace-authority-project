<%
   multiplicity ||= "one" 
   singular = "#{controller}".singularize 
%>

<div class="batch-spawn-form">
	<%= form_context :batch_spawn, {} do |form| %>
	  <div class="alert alert-danger missing-ref-message" style="display: none;"><%= I18n.t "plugins.#{singular}._frontend.messages.please_select_a_#{singular}_to_batch_spawn" %></div>
	  <%= render_aspace_partial :partial => "#{controller}/linker", :locals => { :form => form, :hide_create => true, :multiplicity => multiplicity }%>

	</div>
	<% end %>	
</div>